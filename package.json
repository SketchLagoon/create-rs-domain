{
  "name": "@create-rs-domain/root",
  "version": "0.0.1",
  "description": "monorepo approach to rocket science app aggregation under a domain based model",
  "main": "index.js",
  "author": "Alex Wright",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build:all": "turbo run build --parallel",
    "build:dev:all": "turbo run build:dev --parallel",
    "install:all": "lerna bootstrap && lerna link",
    "test:all": "turbo run test --parallel",
    "start:all": "turbo run launch --parallel --no-cache",
    "kill:all": "npx kill-port 1001 1002 2001 2002 3001 3002 8000",
    "wow": "turbo run build test"
  },
  "workspaces": [
    "features/*",
    "server",
    "storybook"
  ],
  "devDependencies": {
    "kill-port": "^1.6.1",
    "lerna": "^4.0.0",
    "turbo": "^1.0.6"
  },
  "turbo": {
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**"
        ]
      },
      "test": {
        "dependsOn": [
          "build"
        ],
        "outputs": [
          ".jest-test-results.json"
        ]
      },
      "dev": {
        "cache": false
      }
    }
  }
}
